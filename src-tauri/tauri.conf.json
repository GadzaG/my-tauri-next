{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "my-tauri-next",
  "version": "0.1.0",
  "identifier": "com.anrove.mytaurinext",
  "build": {
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun next build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "my-tauri-next",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../out"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
